generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id                   String                   @id
  email                String                   @unique
  password             String?
  firstName            String
  lastName             String
  emailVerifiedAt      DateTime?
  twoFactorSecret      String
  twoFactorEnableAt    DateTime?
  disabledAt           DateTime?
  createdAt            DateTime                 @default(now())
  updatedAt            DateTime
  blacklistAccessToken BlacklistedAccessToken[]
  loginHistory         LoginHistory[]
  oauth                OAuthAccount[]
  passwordResetToken   PasswordResetToken[]
  refreshToken         RefreshToken[]
  verifytoken          VerificationToken[]
}

model OAuthAccount {
  id         String   @id
  provider   String
  providerId String
  createdAt  DateTime
  userId     String
  user       User     @relation(fields: [userId], references: [id])

  @@unique([provider, providerId])
  @@index([userId], map: "OAuthAccount_userId_fkey")
}

model RefreshToken {
  id        String    @id
  token     String
  userAgent String
  ipAddress String
  revokedAt DateTime?
  expiresAt DateTime
  createdAt DateTime  @default(now())
  userId    String
  user      User      @relation(fields: [userId], references: [id])

  @@index([userId], map: "RefreshToken_userId_fkey")
}

model BlacklistedAccessToken {
  id        String   @id
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "BlacklistedAccessToken_userId_fkey")
}

model VerificationToken {
  id               String   @id
  emailVerifyToken String   @unique
  expiredAt        DateTime
  createdAt        DateTime
  userId           String
  user             User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "VerificationToken_userId_fkey")
}

model PasswordResetToken {
  id        String   @id
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "PasswordResetToken_userId_fkey")
}

model LoginHistory {
  id        String   @id
  ipAddress String
  userAgent String
  success   Boolean
  createdAt DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([userId], map: "LoginHistory_userId_fkey")
}
